{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "//..."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
            },
        },
        {
            "label": "Refresh compile_commands.json",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "//.vscode:compile_commands"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": [],
        },
        {
            "label": "Small Unit Tests",
            "type": "shell",
            "command": "bazel",
            "args": [
                "test",
                "--test_output=all",
                "--test_tag_filters=unit",
                "--test_size_filters=small",
                "//..."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
        }
    ]
}